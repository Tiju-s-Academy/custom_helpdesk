<odoo>
    <!-- Record Rule: Help Desk Manager has access to all tickets -->
    <record id="helpdesk_ticket_rule_manager" model="ir.rule">
        <field name="name">Help Desk Manager Access</field>
        <field name="model_id" ref="model_helpdesk_ticket"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('custom_helpdesk.group_helpdesk_manager'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>

