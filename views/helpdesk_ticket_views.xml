<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_helpdesk_ticket_tree" model="ir.ui.view">
        <field name="name">helpdesk.ticket.tree</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="priority" widget="priority"/>
                <field name="customer_id"/>
                <field name="state"/>
                <field name="create_date"/>
            </tree>
        </field>
    </record>
    <record id="view_helpdesk_ticket_kanban" model="ir.ui.view">
        <field name="name">helpdesk.ticket.kanban</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" on_create="quick_create" class="o_kanban_small_column"
                    sample="1" js_class="helpdesk_ticket_kanban">
                <field name="name"/>
                <field name="customer_id"/>
                <field name="category_id"/>
                <field name="expected_resolution_date"/>
                <field name="priority" widget="priority"/>
                <progressbar field="state" colors="{&quot;done&quot;: &quot;success&quot;, &quot;blocked&quot;:
                                &quot;danger&quot;, &quot;normal&quot;: &quot;200&quot;}"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <span class="oe_kanban_color_help"/>
                            <div class="oe_kanban_content text-break">
                                <div>
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                </div>
                                <div>
                                    <field name="customer_id"/>
                                </div>
                                <div>
                                    <field name="category_id"/>
                                </div>
                                <field name="expected_resolution_date"/>
                                <div>
                                    <field name="priority" widget="priority"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record id="view_helpdesk_ticket_form" model="ir.ui.view">
        <field name="name">helpdesk.ticket.form</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <form string="Ticket">
                <header>
                    <field name="state" widget="statusbar"/>
                    <button string="Submit" name="action_submit" type="object" class="oe_highlight"
                            invisible="state !='new'"/>
                    <button string="Cancel" name="action_cancel_submission" type="object"
                            invisible="state !='submitted'"/>

                    <button string="Start Progress" name="action_start_progress" type="object"
                            invisible="state !='submitted'"/>

                    <button string="Resolve" name="action_resolve" type="object"
                            invisible="state !='in_progress'"/>
                </header>
                <sheet>
                    <group>
                        <field name="name" readonly="state not in ['new','submitted']"/>
                        <field name="customer_id" readonly="state not in ['new','submitted']"/>
                        <field name="priority" widget="priority" readonly="state not in ['new','submitted']"/>
                        <field name="category_id" readonly="state not in ['new','submitted']"/>
                        <field name="create_date" readonly="1"/>
                        <field name="expected_resolution_date" readonly="state not in ['new','submitted']"/>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_helpdesk_ticket" model="ir.actions.act_window">
        <field name="name">HelpDesk Ticket</field>
        <field name="res_model">helpdesk.ticket</field>
        <field name="view_mode">tree,kanban,form</field>
    </record>
</odoo>